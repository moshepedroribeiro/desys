<div class="nested-form-wrapper" data-new-record="<%= f.object.new_record? %>">
  <div class="row">
    <div class="col-md-3">
      <%= f.label :product_name, class: 'form-label' %>
      <%= f.text_field :product_name, class: 'form-control form-control-sm' %>
    </div>

    <div class="col-md-2">
      <%= f.label :quantity, class: 'form-label' %>
      <%= f.text_field :quantity, class: 'form-control form-control-sm' %>
    </div>

    <div class="col-md-2">
      <%= f.label :unit_price, class: 'form-label' %>
      <%= f.text_field :unit_price, class: 'form-control form-control-sm' %>
    </div>

    <div class="col-md-2">
      <%= f.label :discount, class: 'form-label' %>
      <%= f.text_field :discount, class: 'form-control form-control-sm' %>
    </div>

    <div class="col-md-3 remove-item">
      <%= f.hidden_field :_destroy %>
      <button type="button" class="btn btn-danger" data-action="nested-form#remove">Remove item</button>
    </div>
  </div>
</div>